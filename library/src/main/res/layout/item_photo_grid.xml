<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical">

    <TextView
        android:id="@+id/btn_photo"
        android:layout_width="@dimen/icon_size_super"
        android:layout_height="@dimen/icon_size_super"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_photo"
        android:drawableTop="@mipmap/icon_photo"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="拍照"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/lv_photo"
        android:layout_width="@dimen/icon_size_super"
        android:layout_height="@dimen/icon_size_super"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_photo"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_photo"
            style="@style/style_img_view_radius"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <ImageView
        android:id="@+id/img_del"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignRight="@id/btn_photo"
        android:layout_marginRight="-8dp"
        android:src="@mipmap/icon_del_photo"
        android:visibility="visible" />
</RelativeLayout>