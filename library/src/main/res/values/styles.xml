<resources>


    <!-- PopupWindow从底部弹出效果 -->
    <style name="AnimationFadeBottomToTop">
        <item name="android:windowEnterAnimation">@anim/anim_bookshelf_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_bookshelf_dialog_exit</item>
    </style>

    <!-- 自定义dialog 统一背景样式 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <!-- 设置浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 自定义loadingprogress 继承dialog -->
    <style name="CustomProgressDialog" parent="CustomDialog">

    </style>

